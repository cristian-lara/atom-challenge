{
    "hosting": {
      "public": "dist/apps/frontend",
      "rewrites": [
        { "source": "/api/**", "function": "api" },
        { "source": "**", "destination": "/index.html" }
      ]
    },
    "functions": {
      "source": "dist/apps/backend",
      "runtime": "nodejs22"
    },
    "storage": {
      "rules": "storage.rules"
    },
    "firestore": {
      "rules": "firestore.rules"
    },
    "emulators": {
      "functions": { "port": 5001 },
      "firestore": { "port": 8080 },
      "storage": { "port": 9199 },
      "ui": { "enabled": true, "port": 4000 }
    }
  }